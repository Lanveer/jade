/* pages/deposit/deposit.wxss */

page{margin: 0;padding: 0;background: #ededed;}
.banner{
    width: 100%;height:248rpx;
}
.banner image {
    width: 100%;height: 100%;
}

.banner swiper{
   height:248rpx; 
}

.content{
    width: 710rpx;height: 748rpx;margin:18px auto 40rpx;
    background-image: url('../../images/deposit/bg.png');
    background-repeat: no-repeat;
    background-size: contain;
}

.header{
    width: 670rpx;height: 84rpx;display: flex;
    flex-direction: row;align-items: center;vertical-align: middle;justify-content: space-between;
}
.header-left{
    margin-left: 20rpx;font-size: 30rpx;font-weight: bold;color: #282828;
}
.deposit{
    font-size: 26rpx;color: #d02927;
}

.body{
    width: 100%;height: 665rpx;overflow: hidden;position: relative;
}
.title{
    font-size: 30rpx;color: #282828;
    margin: 30rpx 0 10rpx 17rpx;
}
.scroll{
    width: 100%;height: 40rpx;display: flex;flex-direction: row;margin: 30rpx 0 30rpx 0;
    align-items: center;vertical-align: middle;justify-content: space-between;
}
.scroll:last-child{
    padding-bottom: 30rpx;
}
.tips{font-size: 28rpx;text-align: center;line-height: 120rpx;color: #ccc;}
.name{font-size: 28rpx;color: #b2b2b2;margin-left: 20rpx;}

.num{font-size: 24rpx;color: #4b4b4b;margin-right: 20rpx;}

.paying{
    width: 668rpx;height: 70rpx;background: #d02927;color: #fff;font-size: 28rpx;text-align: center;line-height: 70rpx;margin:auto;}